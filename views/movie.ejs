<!DOCTYPE html>
<html>
	<head>
		<% include ./partials/head %>
	</head>
	<body>
		<header>
			<% include ./partials/header %>
		</header>
		<a href='/movies'>Back</a>
		<h1 class='center'><%= movie.title %></h1>
		<hr />
		<% var action='/movies/edit/' + movie.id %>
		<form action=<%= action %> method='POST'>
			<input type='text' name='name' value=<%= movie.title %> />
			<input type='text' name='description' value=<%= movie.description %> />
			<button class='btn btn-wave'>Update</button>
		</form>
	</body>
</html>